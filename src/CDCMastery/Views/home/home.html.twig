{% extends "layout.html.twig" %}
{% set page_title = "Home" %}
{% block main %}
    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                <a href="/tests/new" class="list-group-item border-success">Start Test</a>
                <a href="/tests" class="list-group-item">Test History</a>
                <a href="/cards" class="list-group-item">Flash Cards</a>
                <a href="/profile" class="list-group-item">View Profile</a>
            </div>
        </div>
        <div class="col-md-8">
            {% if (tests.complete|length + tests.incomplete|length) <= 0 %}
                You have not started any tests yet, <a href="/tests/new">Start one now</a>!
            {% else %}
                <ul class="nav nav-tabs">
                    {% if tests.complete|length > 0 %}
                        <li class="active"><a href="#completed" data-toggle="tab" aria-expanded="true">Last Five
                                Tests</a></li>
                    {% endif %}
                    {% if tests.incomplete|length > 0 %}
                        <li class=""><a href="#incomplete" data-toggle="tab" aria-expanded="false">Incomplete Tests
                                ({{ tests.incomplete|length }})</a></li>
                    {% endif %}
                </ul>
                <div id="testTypeTabs" class="tab-content">
                    {% if tests.complete|length > 0 %}
                        <div class="tab-pane fade active in" id="completed">
                            <div class="table-responsive">
                                <table id="completed-tests-table" class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>AFSC</th>
                                        <th>Questions</th>
                                        <th>Time Started</th>
                                        <th>Time Completed</th>
                                        <th>Score</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for test in tests.complete %}
                                        <tr style="cursor:pointer" data-uuid="{{ test.uuid }}">
                                            <td title="{{ test.afsc }}">
                                                {% if test.afsc|length > 0 %}
                                                    {{ test.afsc|length > 35 ? test.afsc|slice(0, 35) ~ '...' : test.afsc }}
                                                {% else %}
                                                    No Data
                                                {% endif %}
                                            </td>
                                            <td>{{ test.questions }}</td>
                                            <td>{{ test.time.started }}</td>
                                            <td>{{ test.time.completed }}</td>
                                            <td>{{ test.score }}%</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endif %}
                    {% if tests.incomplete|length > 0 %}
                        <div class="tab-pane fade" id="incomplete">
                            <div class="table-responsive">
                                <table id="incomplete-tests-table" class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>AFSC</th>
                                        <th>Questions</th>
                                        <th>Time Started</th>
                                        <th>Progress</th>
                                        <th style="width:15%">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for test in tests.incomplete %}
                                        <tr style="cursor:pointer" data-uuid="{{ test.uuid }}">
                                            <td title="{{ test.afsc }}">
                                                {% if test.afsc|length > 0 %}
                                                    {{ test.afsc|length > 30 ? test.afsc|slice(0, 30) ~ '...' : test.afsc }}
                                                {% else %}
                                                    No Data
                                                {% endif %}
                                            </td>
                                            <td>{{ test.questions }}</td>
                                            <td>{{ test.time.started }}</td>
                                            {% if test.questions > 0 %}
                                                <td>{{ ((test.answered / test.questions) * 100)|round }}%</td>
                                            {% else %}
                                                <td>0%</td>
                                            {% endif %}
                                            <td>
                                                <div class="btn-group btn-group-justified btn-group-xs">
                                                    <a class="btn btn-success"
                                                       href="/tests/{{ test.uuid }}"
                                                       title="Resume Test">Go</a>
                                                    <a class="btn btn-danger"
                                                       href="/tests/{{ test.uuid }}/delete"
                                                       title="Delete Test">X</a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endif %}
                    {% if tests.incomplete|length > 0 or tests.complete|length > 0 %}
                        {% set tableSelector = "#incomplete-tests-table, #completed-tests-table" %}
                        {% set redirectPath = "/tests" %}
                        {% include "utilities/table-row-link.html.twig" %}
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h4>General Stats</h4>
                </div>
                <div class="panel-body panel-min-250">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Time Period</th>
                                <th>Average</th>
                                <th>Tests</th>
                            </tr>
                            </thead>
                            <tr>
                                <td>Overall</td>
                                <td>{{ generalStats.avg.overall }}</td>
                                <td>{{ generalStats.count.overall }}</td>
                            </tr>
                            <tr>
                                <td>Last 7 Days</td>
                                <td>{{ generalStats.avg.lastSeven }}</td>
                                <td>{{ generalStats.count.lastSeven }}</td>
                            </tr>
                            <tr>
                                <td>Last 30 Days</td>
                                <td>{{ generalStats.avg.lastThirty }}</td>
                                <td>{{ generalStats.count.lastThirty }}</td>
                            </tr>
                            <tr>
                                <td>Last 90 Days</td>
                                <td>{{ generalStats.avg.lastNinety }}</td>
                                <td>{{ generalStats.count.lastNinety }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <h4>Last Seven Days</h4>
                </div>
                <div class="panel-body panel-min-250">
                    {% if lastSevenStats.avg|length > 0 %}
                        <div id="last-seven-avg-count" style="height:218px">
                            &nbsp;
                        </div>
                    {% else %}
                        <div class="text-center">
                            <strong>No Test Data</strong>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <h4>All-Time</h4>
                </div>
                <div class="panel-body panel-min-250">
                    {% if monthStats.avg|length > 0 %}
                        <div id="month-avg-count" style="height:218px">
                            &nbsp;
                        </div>
                    {% else %}
                        <div class="text-center">
                            <strong>No Test Data</strong>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <script>
        window.onload = function () {
            {% if lastSevenStats.avg|length > 0 %}
            var lastSevenChart = new CanvasJS.Chart("last-seven-avg-count",
                {
                    zoomEnabled: false,
                    animationEnabled: true,
                    axisX: {
                        valueFormatString: " ",
                        tickLength: 0
                    },
                    axisY: {
                        interlacedColor: "#F5F5F5",
                        gridColor: "#D7D7D7",
                        tickColor: "#D7D7D7",
                        tickLength: 0
                    },
                    theme: "theme2",
                    toolTip: {
                        shared: true
                    },
                    data: [
                        {
                            type: "column",
                            lineThickness: 3,
                            axisYType: "primary",
                            name: "Average Score",
                            dataPoints: {{ lastSevenStats.avg|raw }}
                        },
                        {
                            type: "column",
                            lineThickness: 3,
                            name: "Tests Taken",
                            axisYType: "primary",
                            dataPoints: {{ lastSevenStats.count|raw }}
                        }
                    ],
                    legend: {
                        verticalAlign: "bottom",
                        horizontalAlign: "center",
                        fontSize: 15,
                        fontFamily: "Lucida Sans Unicode",
                        cursor: "pointer"
                    }
                });

            lastSevenChart.render();
            {% endif %}

            {% if monthStats.avg %}
            var monthChart = new CanvasJS.Chart("month-avg-count",
                {
                    zoomEnabled: false,
                    animationEnabled: true,
                    axisX: {
                        valueFormatString: " ",
                        tickLength: 0
                    },
                    axisY: {
                        interlacedColor: "#F5F5F5",
                        gridColor: "#D7D7D7",
                        tickColor: "#D7D7D7",
                        tickLength: 0
                    },
                    theme: "theme2",
                    toolTip: {
                        shared: true
                    },
                    data: [
                        {
                            type: "column",
                            lineThickness: 3,
                            name: "Tests Taken",
                            axisYType: "primary",
                            dataPoints: {{ monthStats.count|raw }}
                        },
                        {
                            type: "line",
                            lineThickness: 3,
                            axisYType: "secondary",
                            name: "Average Score",
                            dataPoints: {{ monthStats.avg|raw }}
                        }
                    ],
                    legend: {
                        verticalAlign: "bottom",
                        horizontalAlign: "center",
                        fontSize: 15,
                        fontFamily: "Lucida Sans Unicode",
                        cursor: "pointer"
                    }
                });

            monthChart.render();
            {% endif %}
        }
    </script>
{% endblock %}