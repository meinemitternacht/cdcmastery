{% extends "layout.html.twig" %}
{% set page_title = "Delete Office Symbol - #{osymbol.symbol}" %}
{% block main %}
    <div class="page-header">
        <h3><span class="text-muted">Delete</span> {{ osymbol.symbol }}</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger">
                Are you sure you want to delete this Office Symbol? All users associated with this symbol will
                no longer have one set. <strong>THIS CANNOT BE UNDONE.</strong>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-warning text-center">
                        <div class="panel-heading">
                            <h5>Users</h5>
                        </div>
                        <div class="panel-body">
                            {{ osymbol.users|number_format }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <form action="/admin/office-symbols/{{ osymbol.uuid }}/delete"
                          method="POST">
                        <div class="form-group">
                            <button class="btn btn-danger"
                                    type="submit"
                                    title="Delete Office Symbol">
                                Delete
                            </button>
                            <a href="/admin/office-symbols"
                               class="btn btn-success"
                               title="Return to Office Symbols List">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
