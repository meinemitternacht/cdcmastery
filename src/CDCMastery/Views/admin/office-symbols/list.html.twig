{% extends "layout.html.twig" %}
{% set page_title = "Office Symbols" %}
{% block main %}
    <div class="page-header">
        <h3>Manage Office Symbols</h3>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-sm table-header-form-well">
                <div class="container-fluid">
                    <form class="form form-inline table-header-form" action="/admin/office-symbols/add" method="POST">
                        <div class="form-group col-lg-10 col-sm-12">
                            <label class="sr-only" for="symbol">Symbol</label>
                            <input name="symbol" id="symbol" class="form-control" placeholder="Office Symbol">
                        </div>
                        <div class="form-group col-lg-1 col-sm-12">
                            <button class="btn btn-sm btn-success"
                                    type="submit">
                                Add
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="afscs-table">
                    <thead>
                    <tr>
                        <th class="col-md-6">Symbol</th>
                        <th class="col-md-2">Users</th>
                        <th class="col-md-4">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for symbol in osymbols %}
                        <tr>
                            <td>{{ symbol.symbol }}</td>
                            <td>{{ symbol.users|number_format }}</td>
                            <td>
                                <a class="btn btn-xs btn-danger"
                                   href="/admin/office-symbols/{{ symbol.uuid }}/delete"
                                   title="Delete Office Symbol">Delete</a>
                                <a class="btn btn-xs btn-warning"
                                   href="/admin/office-symbols/{{ symbol.uuid }}/edit"
                                   title="Edit Office Symbol">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
