{% extends "layout.html.twig" %}
{% set page_title = "Manage Question - #{afsc.name}" %}
{% block main %}
    {% include "blocks/admin/cdc/afsc/menu.html.twig" %}
    <div class="page-header">
        <h3><span class="text-muted">Manage Question</span> - {{ afsc.name }}</h3>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div id="question" class="well well-lg">
                {{ question.text }}
            </div>
            <div class="list-group">
                {% for answer in answers %}
                    <div href="#"
                         class="list-group-item answer{% if answer.correct %} selected{% endif %}">
                        <div class="row">
                            <div class="col-md-1">
                                <span class="glyphicon glyphicon-{% if answer.correct %}ok text-white{% else %}remove text-danger{% endif %}"></span>
                            </div>
                            <div class="col-md-11{% if not answer.correct %} text-muted{% endif %}">
                                {{ answer.text }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-3">
            {% include "blocks/admin/cdc/afsc/question-menu.html.twig" %}
        </div>
    </div>
{% endblock %}