{% extends "layout.html.twig" %}
{% set page_title = "Manage AFSCs" %}
{% block main %}
    {% include "blocks/admin/cdc/afsc/menu.html.twig" %}
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm addAfscFormWell">
                <form id="addAfscForm" class="form-inline" action="/admin/cdc/afsc" method="POST">
                    <div class="form-group name-fg">
                        <label class="sr-only" for="name">Name</label>
                        <input name="name" id="name" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group version-fg">
                        <label class="sr-only" for="version">Version</label>
                        <input name="version" id="version" class="form-control" placeholder="Version">
                    </div>
                    <div class="form-group description-fg">
                        <label class="sr-only" for="description">Description</label>
                        <input name="description" id="description" class="form-control" placeholder="Description">
                    </div>
                    <div class="form-group fouo-fg">
                        <label for="fouo">
                            <input type="checkbox" name="fouo" id="fouo" value="1"> FOUO
                        </label>
                    </div>
                    <div class="form-group hidden-fg">
                        <label for="hidden">
                            <input type="checkbox" name="hidden" id="hidden" value="1"> Hidden
                        </label>
                    </div>
                    <button class="btn btn-success" id="addAfsc">Add AFSC</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="afscs-table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Version</th>
                        <th>Description</th>
                        <th>FOUO</th>
                        <th>Hidden</th>
                        <th>Questions</th>
                        <th>Users</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for afsc in afscs %}
                        <tr{% if afsc.obsolete %} class="text-muted"{% endif %} data-uuid="{{ afsc.uuid }}" style="cursor:pointer">
                            <td>{{ afsc.name }}</td>
                            <td title="{{ afsc.version }}">
                                {{ afsc.version|length > 40 ? afsc.version|slice(0, 40) ~ '...' : afsc.version }}
                            </td>
                            <td title="{{ afsc.description }}">
                                {{ afsc.description|length > 40 ? afsc.description|slice(0, 40) ~ '...' : afsc.description }}
                            </td>
                            <td>{{ afsc.isFouo ? 'Yes' : 'No' }}</td>
                            <td>{{ afsc.isHidden ? 'Yes' : 'No' }}</td>
                            <td>{{ afscQuestions[afsc.uuid]|default(0)|number_format }}</td>
                            <td>{{ afscUsers[afsc.uuid]|default(0)|number_format }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% if afscs|length > 0 %}
                    {% set tableSelector = "#afscs-table" %}
                    {% set redirectPath = "/admin/cdc/afsc" %}
                    {% include "utilities/table-row-link.html.twig" %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}