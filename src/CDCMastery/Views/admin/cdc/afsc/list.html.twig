{% extends "layout.html.twig" %}
{% set page_title = "Manage AFSCs" %}
{% block main %}
    {% include "blocks/admin/cdc/afsc/menu.html.twig" %}
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Version</th>
                        <th>Description</th>
                        <th>FOUO</th>
                        <th>Hidden</th>
                        <th>Questions</th>
                        <th>Users</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for afsc in afscs %}
                        <tr>
                            <td>{{ afsc.name }}</td>
                            <td title="{{ afsc.version }}">
                                {{ afsc.version|length > 40 ? afsc.version|slice(0, 40) ~ '...' : afsc.version }}
                            </td>
                            <td title="{{ afsc.description }}">
                                {{ afsc.description|length > 40 ? afsc.description|slice(0, 40) ~ '...' : afsc.description }}
                            </td>
                            <td>{{ afsc.isFouo ? 'Yes' : 'No' }}</td>
                            <td>{{ afsc.isHidden ? 'Yes' : 'No' }}</td>
                            <td>{{ afscQuestions[afsc.uuid]|default(0) }}</td>
                            <td>{{ afscUsers[afsc.uuid]|default(0) }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}