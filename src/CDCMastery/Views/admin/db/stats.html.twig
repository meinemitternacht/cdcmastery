{% extends "layout.html.twig" %}
{% set page_title = "Database Statistics" %}
{% block main %}
    <div class="page-header">
        <h3>Database Statistics</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-condensed">
                    <thead>
                    <tr>
                        {% for col in t_stats_cols %}
                            {% if col == "Name" or col == "Engine" %}
                                <th>{{ col }}</th>
                            {% else %}
                                <th class="text-right">{{ col }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for row in t_stats %}
                        <tr>
                            {% for key, col in row %}
                                {% if key == "Name" or key == "Engine" %}
                                    <td>{{ col }}</td>
                                {% else %}
                                    <td class="text-right">{{ col|number_format }}</td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
