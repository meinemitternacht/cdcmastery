{% extends "layout.html.twig" %}
{% set page_title = "Manage Training Manager Associations - #{user.name}" %}
{% block main %}
    {% include "blocks/admin/users/menu.html.twig" %}
    <div class="page-header">
        <h3>
            <span class="text-muted">Training Manager Associations</span> - {{ user.name }}
            {% if user.isDisabled %}
                <span class="badge badge-danger" title="This user is currently disabled">DISABLED</span>
            {% endif %}
        </h3>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-4">
            <div class="well well-sm">
                <form action="/admin/users/{{ user.uuid }}/training-managers/add"
                      method="POST">
                    <fieldset>
                        <legend>Add Training Manager</legend>
                        {% if assocs.available %}
                            <div class="help-block">
                                Below is a list of training managers found at <strong>{{ base.name }}</strong>. Select
                                one or more of these and click "Add" to associate this user with those accounts.
                            </div>
                            <div class="form-group">
                                <fieldset>
                                    <label for="new_tm">
                                        Supervisor
                                    </label>
                                    <select id="new_tm" name="new_tm[]" class="form-control" size="8" multiple>
                                        {% for tm in assocs.available %}
                                            <option value="{{ tm.uuid }}">
                                                {{ tm.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </fieldset>
                            </div>
                            <div class="form-group">
                                <fieldset>
                                    <button type="submit" class="btn btn-sm btn-success">Add</button>
                                </fieldset>
                            </div>
                        {% else %}
                            There are no unassociated training managers at <strong>{{ base.name }}</strong>.
                        {% endif %}
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="well well-sm">
                <form action="/admin/users/{{ user.uuid }}/training-managers/remove"
                      method="POST">
                    <fieldset>
                        <legend>Current Associations</legend>
                        {% if assocs.tm %}
                            <div class="form-group">
                                <fieldset>
                                    {% for tm in assocs.tm %}
                                        <div class="row">
                                            <div class="col-md-1">
                                                <input type="checkbox"
                                                       id="del-tm-{{ tm.uuid }}"
                                                       name="del_tm[]"
                                                       value="{{ tm.uuid }}">
                                            </div>
                                            <div class="col-md-11">
                                                <label for="del-tm-{{ tm.uuid }}">
                                                    {{ tm.name }}
                                                </label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </fieldset>
                            </div>
                            <div class="form-group">
                                <fieldset>
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </fieldset>
                            </div>
                        {% else %}
                            <div class="help-block">
                                There are no training manager associations in the database for this user.
                            </div>
                        {% endif %}
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}