{% extends "layout.html.twig" %}
{% set page_title = "Edit Base - " ~ base.name %}
{% block main %}
    <div class="page-header">
        <h3>Edit {{ base.name }}</h3>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="well">
                <form action="/admin/bases/{{ base.uuid }}/edit" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <fieldset>
                                <label class="col-md-3 control-label"
                                       for="name">
                                    Base Name
                                </label>
                                <div class="col-md-9">
                                    <input class="form-control"
                                           id="name"
                                           name="name"
                                           placeholder="Enter Base Name..."
                                           value="{{ base.name }}">
                                </div>
                            </fieldset>
                        </div>
                        <div class="form-group">
                            <fieldset>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-success">Save Changes</button>
                                    <a class="btn btn-default"
                                       href="/admin/bases">Cancel</a>
                                </div>
                            </fieldset>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}