{% extends "layout.html.twig" %}
{% set page_title = "Edit Flash Card - #{cat.name}" %}
{% block main %}
    {% include "blocks/admin/cards/menu.html.twig" %}
    <div class="page-header">
        <h3><span class="text-muted">Edit Card</span> - {{ cat.name }}</h3>
    </div>
    <div class="row">
        <div class="well well-sm col-md-8 col-md-offset-2">
            <form action="/admin/cards/{{ cat.uuid }}/data/{{ card.uuid }}/edit"
                  method="POST">
                <fieldset>
                    <legend>Card Data</legend>
                    <div class="form-group">
                        <label for="card-front">Card Front</label>
                        <textarea class="form-control"
                                  name="card_front"
                                  id="card-front">{{ card.front }}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="card-back">Card Back</label>
                        <textarea class="form-control"
                                  name="card_back"
                                  id="card-back">{{ card.back }}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit"
                                class="btn btn-success">
                            Save Changes
                        </button>
                        <a href="/admin/cards/{{ cat.uuid }}"
                           class="btn btn-primary">
                            Cancel
                        </a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}