<nav class="navbar navbar-sub">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#card-cats-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <div class="navbar-brand hidden-sm hidden-md hidden-lg">
                Flash Cards Menu
            </div>
        </div>

        <div class="collapse navbar-collapse" id="card-cats-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li{% if cur_url == "/cards" %} class="active"{% endif %}>
                    <a href="/cards">Categories</a>
                </li>
                <li{% if cur_url == "/cards/add" %} class="active"{% endif %}>
                    <a href="/cards/add">
                        <span class="glyphicon glyphicon-plus"></span>
                        Add Category
                    </a>
                </li>

                {% if cat %}
                    <li{% if cur_url == "/cards/" ~ cat.uuid %} class="active"{% endif %}>
                        <a href="/cards/{{ cat.uuid }}">View Cards</a>
                    </li>
                    {% if cat.type == "private" and cat.createdBy == cur_user_uuid %}
                        <li{% if cur_url == "/cards/" ~ cat.uuid ~ "/edit" %} class="active"{% endif %}>
                            <a href="/cards/{{ cat.uuid }}/edit"
                               class="bg-warning">
                                Edit Category
                            </a>
                        </li>
                        <li{% if cur_url == "/cards/" ~ cat.uuid ~ "/delete" %} class="active"{% endif %}>
                            <a href="/cards/{{ cat.uuid }}/delete"
                               class="bg-danger">
                                Delete Category
                            </a>
                        </li>
                    {% endif %}
                {% endif %}
            </ul>
        </div>
    </div>
</nav>