                            <li role="separator" class="divider"></li>
                            <li{% if cur_url == "/training/users/" ~ user.uuid ~ "/tests/incomplete/delete" %} class="active"{% endif %}>
                                <a href="/training/users/{{ user.uuid }}/tests/incomplete/delete">Delete Incomplete
                                    Tests</a>
                            </li>

