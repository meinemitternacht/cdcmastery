                                <li{% if cur_url == "/training/users/" ~ user.uuid ~ "/afsc" %} class="active"{% endif %}>
                                    <a href="/training/users/{{ user.uuid }}/afsc">Manage AFSCs</a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>
                    <li{% if cur_url == "/training/users/" ~ user.uuid ~ "/reset-password" %} class="active"{% endif %}>
                        <a href="/training/users/{{ user.uuid }}/reset-password">Reset Password</a>
