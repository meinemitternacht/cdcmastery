<div class="page-header">
    <h3><span class="text-muted">Incomplete Tests</span> - {{ user.name }}</h3>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table id="tests-table" class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>{{ sortlink('afscList','AFSC',sort)|raw }}</th>
                    <th>Questions</th>
                    <th>{{ sortlink('timeStarted','Time Started',sort)|raw }}</th>
                    <th>{{ sortlink('numAnswered','Progress',sort)|raw }}</th>
                </tr>
                </thead>
                <tbody>
                {% for test in tests %}
                    <tr>
                        <td title="{{ test.afsc }}">
                            {% if test.afsc|length > 0 %}
                                {{ test.afsc|length > 20 ? test.afsc|slice(0, 20) ~ '...' : test.afsc }}
                            {% else %}
                                No Data
                            {% endif %}
                        </td>
                        <td>{{ test.questions }}</td>
                        <td>{{ test.time.started }}</td>
                        {% if test.questions > 0 %}
                            <td>{{ ((test.answered / test.questions) * 100)|round }}%</td>
                        {% else %}
                            <td>0%</td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if pagination %}
            <div class="text-center">
                {{ pagination|raw }}
            </div>
        {% endif %}
    </div>
</div>