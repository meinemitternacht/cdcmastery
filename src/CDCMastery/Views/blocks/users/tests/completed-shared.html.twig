<div class="row">
    <div class="col-md-4">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">Taken By</div>
                <div class="panel-body">
                    {{ user.name }}
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Time Started</div>
                <div class="panel-body">
                    {{ timeStarted }}
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Time Completed</div>
                <div class="panel-body">
                    {{ timeCompleted }}
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">AFSC(s)</div>
                <div class="panel-body">
                    <ul class="list-unstyled">
                        {% for afsc in afscList %}
                            <li>{{ afsc }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Questions</div>
                <div class="panel-body text-center">
                    {{ numQuestions }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Num. Missed</div>
                <div class="panel-body text-center">
                    {{ numMissed }}
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="panel {% if score >= 80 %}panel-success{% else %}panel-danger{% endif %}">
                <div class="panel-heading">Score</div>
                <div class="panel-body text-center">
                    <strong>{{ score }}%</strong>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        {% if isArchived %}
            <div class="alert alert-info">
                This test has been archived and is no longer available to view. All tests older than six months are
                automatically archived in order to provide the smoothest experience for all of our users.
            </div>
        {% elseif testData %}
            <div class="list-group">
                {% for key, response in testData %}
                    <div class="list-group-item {% if response.answer.correct %}list-group-item-success{% else %}list-group-item-danger{% endif %}">
                        <h4 class="list-group-item-heading text-primary">{{ key + 1 }}
                            . {{ response.question.text }}</h4>
                        <p class="list-group-item-text text-black">{{ response.answer.text }}</p>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Currently, we do not have the data for this test available.
            </div>
        {% endif %}
    </div>
</div>