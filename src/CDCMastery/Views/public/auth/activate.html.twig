{% extends "layout.html.twig" %}
{% set page_title = "Enter Activation Code" %}
{% block main %}
    <div class="page-header">
        <h3>Enter Activation Code</h3>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form action="/auth/activate"
                  method="POST">
                <div class="well well-lg">
                    <fieldset>
                        <div class="form-group">
                            <label for="code">Activation Code</label>
                            <input class="form-control"
                                   name="code"
                                   id="code">
                            <div class="help-block">
                                Enter the activation code you received in the confirmation e-mail sent to the address
                                used during registration.
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success">Activate</button>
                        </div>
                        <div class="help-block text-center">
                            <a href="/auth/activate/resend">I do not have an activation code</a>
                        </div>
                    </fieldset>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
